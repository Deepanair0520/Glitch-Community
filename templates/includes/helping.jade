- Loader = require "./loader"

section.helping
  h2
    a(href="/helping")
      span= "Help Others, Get Thanks →"
    span= " "
    .loader-pie(title="Looking for more questions...")
      .left-side
        .slice(class=@animatedUnlessLookingForQuestions)
      .right-side
        .slice(class=@animatedUnlessLookingForQuestions)

  article.projects
    span(class=@hiddenIfGotQuestions)
      = Loader(this)

    span(class=@hiddenIfQuestions)
      p= @kaomoji
      p Looks like nobody is asking for help right now. 
        a.general-link(href="https://medium.com/glitch/just-raise-your-hand-how-glitch-helps-aa6564cb1685")
          span Learn more
      
    span(class=@hiddenUnlessQuestions)
      ul.projects-container
        - @questions().forEach (question) ->
          - console.log '🚴🏼', question
          = question.template
