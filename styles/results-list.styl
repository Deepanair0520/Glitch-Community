.results-list
  overflow-y: auto
  max-height: 500px
  font-weight: normal
  
  .results
    margin: 0
    padding-left: 0

    a:hover
      text-decoration: none

    .result
      display: block
      position: relative
      text-decoration: none
      &:hover,
      &.hover,
      &:focus,
      &.active
        background-color: general-link
        a
          color: background-color
    .result-project, .result-collection
      display: flex
      width: 100%
      .view-project-link
        margin-left: auto
        button
          width: 65px      

  .result
    list-style-type: none
    cursor: pointer
    border-bottom: 1px solid section-line
    padding: 6px
    padding-top: 12px
    padding-bottom: 12px
    &:hover,
    &.hover,
    &:focus,
    &.active
      border-radius: 3px
      color: background-color
      .result-description
        color: secondary-hover-on-color
      .result-name
        color: background-color
    &:last-child
      border-bottom: none;
  .result-name
    display: inline-block
    color: primary
  
  .result-description
    color: text-on-secondary-background
    word-break: break-word
    font-family: monospace
    font-size: 12px
    line-height: 18px
    padding-top: 5px

  .avatar
    margin-right: 15px
    display: inline-block
    vertical-align: middle
    width: 35px
    height: auto
    border-radius: 3px
    background-color: transparent

  .users
    user-size = 18px
    height: user-size
    display: block
    margin: 0
    margin-top: 6px
    min-height: initial
    .user
      width: user-size
      height: user-size
      img
        width: user-size
        height: user-size


    