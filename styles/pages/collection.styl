.collection-page
  .projects
    display: flex
    flex-wrap: wrap
  .collection-name
    margin-top: 0
  .collection-image-container
    margin: 15px 0px
    max-width: 80%;
  header.collection
    min-width: 200px;
    background: rgba(255,255,255,0.8);
    border-radius: 4px;
    padding: 15px;
    padding-bottom: 16px;
    margin: 0px 30px 30px 0px;
    
    @media(max-width: mediumViewport)
      width: 100%
  .collection-project-container-header
    margin: 0px 16px
  .projects-container
    margin: 30px 30px 30px 16px
  .empty-collection-hint
    background-color: rgba(255,255,255,0.8);
    padding: 15px 25px;
    margin-top: 25px;
    border-radius: 4px;
    font-family: Menlo, Consolas, Monaco, "Lucida Console", monospace;
    font-size: small;

  .projects
    width: 100%
    margin-right: initial
    .category
      img
        padding-bottom: 0.5rem
      .description
        max-width: initial
  .button.delete-collection
    margin-top: 50px
    display: block
  .buttons.buttons-right
    text-align: right
      