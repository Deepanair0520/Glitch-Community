.collection-page
  article.projects
    display: flex
    @media(max-width: largeViewport)
      flex-wrap: wrap
  .collection-image-container
    margin: 15px 0px
    max-width: 175px
    height: 145px
    img
      width: 85%
  header.collection
    display: table
    min-width: 200px
    background: rgba(255,255,255,0.8)
    border-radius: 4px
    padding: 15px
    padding-bottom: 16px
    margin: 0px 30px 30px 0px
    @media(max-width: mediumViewport)
      width: 100%
    @media(max-width: largeViewport)
      width: 100%
    a
      background-color: transparent !important
  .collection-name
    margin-bottom: 10px
    .description 
      margin-bottom: 5px
  .collection-description
    margin: 2em 0
  .collection-url
    font-family: Menlo, Consolas, Monaco, "Lucida Console", Monospace
    font-size: small
    font-weight: bold
    margin-top: 0px
    color: secondary
  .collection-contents 
    width: 75%
    @media(max-width: largeViewport)
      width: 100%
  .collection-project-container-header
    margin: 0px 16px
  .projects-container
    margin: 30px 30px 30px 16px
    overflow: visible
  .projects-container > li
    @media(max-width: largeViewport)
      width: 48%
    @media(max-width: mediumViewport)
      width: 100%
  .empty-collection-hint
    padding: 20px
    margin-top: 25px
    border-radius: 4px
    margin: 16px

  .projects
    width: 100%
    margin-right: initial
    .category
      img
        padding-bottom: 0.5rem
      .description
        max-width: initial
  .button.delete-collection
    margin-top: 50px
    display: block
  .buttons.buttons-right
    text-align: right
  .project-options
    display: block
    background: none
a.collection-view-all
  font-weight: 600
  font-size: 13px
a.collection-view-all:hover
  text-decoration: underline !important