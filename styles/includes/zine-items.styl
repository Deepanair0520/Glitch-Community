.zine-items
  display: flex
  flex-wrap: wrap
  margin: -5px

  .zine-item
    position: relative
    margin: 5px
    width: calc(25% - 10px)
    @media(max-width: mediumViewport)
      width: calc(50% - 10px)
    @media(max-width: smallViewport)
      width: calc(100% - 10px)
    &:hover
      a
        text-decoration: none
      .zine-item-title
        text-decoration: underline
    
    .mask-container
      position: relative
      width: 100%
      height: 0
      padding-bottom: 60%
        
    .mask-container img
      position: absolute
      width: 100%
      height: 100%
      object-fit: cover
      border-radius: 5px

    .mask
      mask-type: luminance
      mask-repeat: no-repeat
      mask-position: center
      mask-size: contain

    .mask-1
      mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-1.svg")
    .mask-2
      mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-2.svg")
    .mask-3
      mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-3.svg")
    .mask-4
      mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-4.svg")
    .mask-5
      mask-image: url("https://cdn.glitch.com/3cef6b25-69ba-4fa9-aa32-cff0fedce195%2Fmask-5.svg")

    .zine-item-meta
      background: secondary-background
      // z-index: -1
      padding: 12px
      padding-top: 23%
      border-radius: 5px
      width: 90%
      margin-left: auto
      margin-right: auto
      margin-top: -20%
    
    .zine-item-tag
      font-size 14px
      color: tertiary
      margin: 0
      margin-top: 2px

    .zine-item-title
      font-size: 16px
      font-weight: 600
      margin: 0
      color: primary
