.users
  padding: 0;
  vertical-align: middle
  &.single-line
    z-index: 1
    position: relative
    white-space: nowrap
    height: 32px
    // like overflow:hidden but with an L shape
    // it extends below the rect and to the right
    // cut off avatars but let tooltips keep rendering
    clip-path: polygon(-100% 0%, 100% 0%, 100% 100%, 200% 100%, 200% 200%, -100% 200%)
  > li
    display: inline-grid
    &:first-child .user
      border-top-left-radius: 5px
      border-bottom-left-radius: 5px
    &:last-child .user
      border-top-right-radius: 5px
      border-bottom-right-radius: 5px
  
  .user
    border-radius: 0

  .user-list-avatar
    display: block
    width: 32px
    height: 32px
    border-radius: inherit

  .made-by-glitch
    border-radius: 5px
    cursor: default

  .avatar-admin-badge
    position: absolute
    bottom: 2px
    right: 2px
    background: admin
    width: 13px
    height: 7px
    border-radius: 3px
    border: 1px solid primary

.user-names
  display: inline-block
  margin-left: 6px
  font-size: 14px
  margin-bottom: 10px;

.whitelisted-domain
  display: inline-block
  width: 22px
  height: 22px
div.whitelisted-domain
  display: inline-flex
  justify-content: center
  align-items: center
  background-color: line-on-secondary-background
  font-size: 13px
  font-weight: 600
  color: white
  border-radius: 3px
img.whitelisted-domain
  object-fit: contain