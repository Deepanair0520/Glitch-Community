// overflow visible to team-user-avatar so that pop can show
a.user.team-user-avatar(click=@toggleUserInfoPop title=@login data-tooltip=@tooltipName data-tooltip-left=true @style)
  img(width=32 height=32 src=@avatarUrl @alt)
  .button-borderless
    .down-arrow

  span(class=@hiddenUnlessUserInfoPopVisible)
    = @UserInfoPop
