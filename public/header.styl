header
  margin-top: 1rem
  position: relative

  .logo
    vertical-align: middle
    margin-right: 5px
    margin-bottom: 1rem
    width: 70px
    @media (max-width: smallViewport)
      width: 70px
  
  p
    max-width: 450px
  
  .whats-glitch
    margin-left: 0
    margin-right: 0
    margin-bottom: 0
    .narrow
      display: none
    @media (max-width: mediumViewport)
      .narrow
        display: block
      .wide
        display: none
  .free
    width: 55px
    vertical-align: sub

  nav
    position: absolute
    right: 0
    top: 0
    text-align: right
    //@media (max-width: mediumViewport)
    //  position: relative
    //  margin-top: 1.5rem
    form
      //display: inline-block
      margin-bottom: 0.5rem
      //margin-bottom: 0
      input
        //margin-top: 1rem
        background-image: url(search)
        background-repeat: no-repeat
        width: 250px
        @media (max-width: smallViewport)
          width: 160px
    button
      margin-left: 10px
      //display: inline-block

    @media (max-width: smallViewport)
      form
        display: block
        input
          margin-top: 0
      //button

  .video
    display: inline-block
    color: link
    cursor: pointer
    .play-button
      vertical-align: -6px
      margin-right: 5px
      margin-left: 2px
    &:hover
      text-decoration: underline

  .user
    display: inline-block
    img
      width: 28px
      height: auto
      position: relative
      display: inline
      border-radius: inherit
      border-radius: 5px
      vertical-align: middle

  .user-options-pop-button
    cursor: pointer
    display: inline-block
    padding-right: 5px
    position: relative
    &:hover
      opacity: 1;
      background-color: #eaeaea;
      border-radius: 5px;
      border: none;
      .down-arrow
        opacity: 1
