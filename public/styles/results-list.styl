.results-list
  overflow-y: auto
  max-height: 500px
  font-weight: normal
  
  .results
    margin: 0
    padding-left: 0

    a:hover
      text-decoration: none

    .result
      display: block
      position: relative
      text-decoration: none
      &:hover,
      &.hover,
      &:focus,
      &.active
        background-color: general-link
        a
          color: background-color

  .result
    list-style-type: none
    cursor: pointer
    border-bottom: 1px solid section-line
    padding: 6px
    padding-top: 12px
    padding-bottom: 12px
    &:hover,
    &.hover,
    &:focus,
    &.active
      border-radius: 3px
      outline: none
      color: background-color
      .result-type
        color: primary
      .result-description
        color: secondary-hover-on-color
      .extension-type
        color: background-color
        background-color: transparent
      .result-name
        color: background-color

  .result-type
    display: inline-block
    background-color: line-added-active
    border-radius: 5px
    margin-right: 5px
    font-size: 12px
    font-weight: 600
    padding: 2px 6px
  .result-name
    color: primary
    display: inline-block
  .result-loader
    display: inline
    .loader
      display: inline-block
      margin-left: 5px
      width: 16px
      height: 16px

  .result-description
    color: text-on-secondary-background
    word-break: break-word
    font-family: monospace
    font-size: 12px
    line-height: 18px
    padding-top: 5px

  .see-all
    color: text-on-secondary-background
    border-bottom: none
    padding-bottom: 6px

  .result-match
    font-weight: 600

  .avatar
    margin-right: 5px
    display: inline-block
    vertical-align: middle
    width: 22px
    height: auto
    border-radius: 3px
    background-color: transparent

  .users
    user-size = 18px
    height: user-size
    display: block
    margin: 0
    .user
      width: user-size
      height: user-size
      img
        width: user-size
        
    
  .user-result
    background-color: primary-background
    padding: 4px 6px
    border-bottom: 1px solid section-line
    list-style: none
    .result-avatar
      width: 40px
      margin-right: 6px
      vertical-align: middle
    .result-information
      display: inline-block
      vertical-align: middle
      line-height: 20px
      border-radius: 3px
      padding: 2px 6px
    &:hover,
    &.hover,
    &:focus
      background-color: transparent
      .result-information
        background-color: section-line

