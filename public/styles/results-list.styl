.results-list
  overflow-y: auto
  max-height: 500px
  font-weight: normal
  
  .results
    margin: 0
    padding-left: 0

    a:hover
      text-decoration: none

    .result
      display: block
      position: relative
      text-decoration: none
      &:hover,
      &.hover,
      &:focus,
      &.active
        background-color: general-link
        a
          color: background-color

  .result
    list-style-type: none
    cursor: pointer
    border-bottom: 1px solid section-line
    padding: 6px
    padding-top: 12px
    padding-bottom: 12px
    &:hover,
    &.hover,
    &:focus,
    &.active
      border-radius: 3px
      outline: none
      color: background-color
      .result-type
        color: primary
      .result-description
        color: secondary-hover-on-color
      .extension-type
        color: background-color
        background-color: transparent
      .result-name
        color: background-color

