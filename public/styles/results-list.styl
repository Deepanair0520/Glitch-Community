  .result-type
    display: inline-block
    background-color: line-added-active
    border-radius: 5px
    margin-right: 5px
    font-size: 12px
    font-weight: 600
    padding: 2px 6px
    // &.result-type-outdated
    //   background-color: line-added-active
  .result-name
    color: primary
    display: inline-block
  .result-loader
    display: inline
    .loader
      display: inline-block
      margin-left: 5px
      width: 16px
      height: 16px

  .result-description
    color: text-on-secondary-background
    word-break: break-word
    font-family: monospace
    font-size: 12px
    line-height: 18px
    padding-top: 5px

  .see-all
    color: text-on-secondary-background
    border-bottom: none
    padding-bottom: 6px

  .result-match
    font-weight: 600

  .avatar
    margin-right: 5px
    display: inline-block
    vertical-align: sub
    width: 18px
    height: auto
    border-radius: 3px
    background-color: transparent



  .user-result
    background-color: primary-background
    padding: 4px 6px
    border-bottom: 1px solid section-line
    list-style: none
    .result-avatar
      width: 40px
      margin-right: 6px
      vertical-align: middle
    .result-information
      display: inline-block
      vertical-align: middle
      line-height: 20px
      border-radius: 3px
      padding: 2px 6px
    &:hover,
    &.hover,
    &:focus
      background-color: transparent
      .result-information
        background-color: section-line

