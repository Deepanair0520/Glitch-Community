.users-information
  .users
    display: inline
    min-height: 32px
    overflow: visible
    height: auto
    margin-right: 5px

  .add-user
    vertical-align: middle

.users
  padding: 0;
  vertical-align: middle
  &.single-line
    z-index: 1
    position: relative
    white-space: nowrap
    min-height: 32px
    // like overflow:hidden but with an L shape
    // it extends below the rect and to the right
    // cut off avatars but let tooltips keep rendering
    clip-path: polygon(-100% 0%, 100% 0%, 100% 100%, 200% 100%, 200% 200%, -100% 200%)
  > li
    display: inline-grid
    &:first-child .user
      border-top-left-radius: 5px
      border-bottom-left-radius: 5px
    &:last-child .user
      border-top-right-radius: 5px
      border-bottom-right-radius: 5px
  
  .user
    border-radius: 0

  .user-list-avatar
    display: block
    width: 32px
    height: 32px
    border-radius: inherit

  .made-by-glitch
    border-radius: 5px
    cursor: default

  .avatar-admin-badge
    position: absolute
    bottom: 2px
    right: 2px
    background: admin
    width: 12px
    height: 6px
    border-radius: 3px

.user-names
  display: inline-block
  margin-left: 6px
  font-size: 14px
  margin-bottom: 10px;
