.users-information
  .users
    display: inline
    min-height: 32px
    overflow: visible
    height: auto
    margin-right: 5px

  .add-user
    vertical-align: middle

.users
  padding: 0;
  vertical-align: middle
  &.single-line
    height: 32px
    overflow: hidden
    white-space: nowrap
  > li
    display: inline-grid
    &:first-child .user
      border-top-left-radius: 5px
      border-bottom-left-radius: 5px
    &:last-child .user
      border-top-right-radius: 5px
      border-bottom-right-radius: 5px
  
  .user
    border-radius: 0

  .user-list-avatar
    display: block
    width: 32px
    height: 32px
    border-radius: inherit

  .made-by-glitch
    border-radius: 5px
    cursor: default

.user-names
  display: inline-block
  margin-left: 6px
  font-size: 14px
  margin-bottom: 10px;
