.team-page
  
  .team-upgrade-banner
    background-color: secondary-background
    max-width: 325px
    border-radius: 5px
    padding: 12px
    progress
      width: 100%
      border-color: secondary
      background-color: primary-background
      margin-top: 12px
      margin-bottom: 12px
      
      &::-webkit-progress-value
        background-color: secondary
        border-radius: 3px
      &::-moz-progress-bar
        background-color: secondary
        border-radius: 3px

    .projects-left
      margin-top: 4px
      display: inline-block
      color: primary-background
      border-radius: 5px
      background-color: notification
      padding: 3px 5px
      padding-bottom: 1px
