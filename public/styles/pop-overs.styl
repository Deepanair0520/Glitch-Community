.pop-over
  text-align: left
  background-color: background-color
  font-size: 14px
  margin: 0
  cursor: initial
  display: block
  position: absolute
  top: 55px;
  left: initial
  border-radius: 3px
  border: 1px solid secondary
  box-shadow: pop-shadow
  z-index: 10
  width: 255px
  padding: 0
  button
    margin-left: 0
  p
    color: primary
    font-weight: normal
    margin-bottom: 10px
  section, >form
    color: primary
    padding: 12px
    padding-top: 14px
    padding-bottom: 14px
  section
    &:first-child
      border-top-left-radius: 3px
      border-top-right-radius: 3px
    &:last-child
      border-bottom: none
      border-bottom-left-radius: 3px
      border-bottom-right-radius: 3px
  .results-list
    padding: 6px

  .description-section
    margin: 0
    padding: 0
    padding-bottom: 4px

  .description
    margin-top: 2px
    margin-bottom: 12px

  .pop-over-info
    margin: 0
    background-color: secondary-background
    border-bottom: 1px solid secondary
    .pop-title
      font-size: 14px
      font-weight: bold
    &.last-section
      border-bottom: none
    .info-description
      margin-bottom: 0
      line-height: 16px

  .pop-over-actions
    margin: 0
    border-bottom: 1px solid secondary
    position: relative

  .emoji
    display: inline-block
  .button,button
    display: inline-block
    margin-bottom: 12px
    margin-left: 0
    max-width: initial
  .button-small
    margin-bottom: 10px
  .button-link
    color: #000
  .button-link:last-child
    .button
      margin: 0
  button:last-child
    margin-bottom: 0
  &.last-section
    border-bottom: none

  .danger-zone
    background-color: warning-background

