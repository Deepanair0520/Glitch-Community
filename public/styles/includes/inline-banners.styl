.inline-banners
  background-color: section-line
  max-width: 325px
  border-radius: 5px
  padding: 12px
  position: relative
  
  progress
    width: 100%
    border-color: secondary
    background-color: primary-background
    margin-top: 12px
    margin-bottom: 12px
    &::-webkit-progress-value
      background-color: secondary
      border-radius: 3px
    &::-moz-progress-bar
      background-color: secondary
      border-radius: 3px
  
  .description
    margin-bottom: 12px

  &.team-upgrade-banner
    margin-top: 2rem
    margin-bottom: 1rem
    .projects-left
      margin-top: 4px
      display: inline-block
      color: primary-background
      border-radius: 5px
      background-color: tertiary
      padding: 3px 5px
      padding-bottom: 1px
    .projects-left-error
      background-color: error

  &.add-project-to-analytics-banner
    position: absolute
    top: 7rem
    .add-team-project-pop
      top: 24px
  
  &.team-project-limit-reached-banner
    background-color: warning-background
    border-bottom-color: warning-background
    &:after
      top: -13px
      left: 8.5px
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border-bottom-color: inherit
      border-width: 7px
