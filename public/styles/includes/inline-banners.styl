.inline-banners
  background-color: secondary-background
  max-width: 325px
  border-radius: 5px
  padding: 12px
  
  progress
    width: 100%
    border-color: secondary
    background-color: primary-background
    margin-top: 12px
    margin-bottom: 12px
    &::-webkit-progress-value
      background-color: secondary
      border-radius: 3px
    &::-moz-progress-bar
      background-color: secondary
      border-radius: 3px
  
  .description
    margin-bottom: 12px

  &.team-upgrade-banner
    margin-top: 2rem
    margin-bottom: 1rem
    .projects-left
      margin-top: 4px
      display: inline-block
      color: primary-background
      border-radius: 5px
      background-color: notification
      padding: 3px 5px
      padding-bottom: 1px

  &.add-project-to-analytics-banner
    color: white
    position: absolute
    background-color: notification
    top: 7rem
