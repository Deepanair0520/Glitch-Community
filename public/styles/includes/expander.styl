.expander
  transition: max-height 500ms ease-out // sync with the setTimeout
  position: relative
  overflow: hidden
  
  .expander-bottom
    background: linear-gradient(transparent, white)
    position: absolute
    bottom: 0
    left: 0
    right: 0
    text-align: center
    
    pointer-events: none
    > *
      pointer-events: initial