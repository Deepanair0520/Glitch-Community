.expander
  transition: max-height 150ms ease-out
  position: relative
  overflow: hidden
  
  .expander-gradient
    background: linear-gradient(to bottom, transparent, white)
    position: absolute
    height: 25px
    bottom: 0
    left: 0
    right: 0
    pointer-events: none
  
  .expander-mask
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    display: flex
    flex-direction: row
    align-items: flex-end
  
  .expander-button
    position: initial
    &::before
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      content: ""
      