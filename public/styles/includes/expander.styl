.expander
  transition: max-height 500ms ease-out // sync with the setTimeout
  position: relative
  overflow: hidden
  
  .expander-mask
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
  
  .expander-gradient
    background: linear-gradient(to bottom, transparent, white)
    position: absolute
    min-height: 25px
    bottom: 0
    left: 0
    right: 0