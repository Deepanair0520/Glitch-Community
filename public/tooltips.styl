  &::before,
  &::after
    transform: translateX(-10%)
    left: 15px
    right: initial

[data-tooltip-right]
  &::before,
  &::after
    transform: translateX(10%)
    right: 42%

[data-tooltip-embed-helper]
  &::before,
  &::after
    transform: translateX(55%)
    right: initial
    left: 15%
    top: -135%
  &::after
    transform: rotate(180deg) translateX(-5px) translateY(-34px)
  &::before
    left: -170%
    top: -36px


[data-tooltip-top]
  &::before,
  &::after
    top: -80%
    right: 45px
    transform: translateX(75%)
  &::before
    background-color: notification
  &::after
    border-top-color: notification
    border-bottom-color: transparent
    margin-top: 31px
    right: 35px

[data-tooltip-persistent]
  &::before,
  &::after
    visibility:visible
    opacity:1
    font-weight: bold

[data-tooltip-error]
  &::before
    background-color: error
  &::after
    border-top-color: error

[data-tooltip-hidden]
  &:hover::before,
  &:hover::after
    visibility:hidden
    opacity:0
